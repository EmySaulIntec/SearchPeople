<?xml version="1.0" encoding="UTF-8"?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SearchPeople.Views.HomeMasterDetailPage"
             xmlns:local="clr-namespace:SearchPeople" >
    <MasterDetailPage.Master>
        <ContentPage Title="Menu">
            <StackLayout BackgroundColor="White">

                <Button Text="Home" HorizontalOptions="FillAndExpand" VerticalOptions="Center"
                        Command="{Binding GoTo}" CommandParameter="{Binding Source={x:Static local:NavigationConstants.Home}}" />
                <Button Text="Search People" HorizontalOptions="FillAndExpand" VerticalOptions="Center"
                        Command="{Binding GoTo}" CommandParameter="{Binding Source={x:Static local:NavigationConstants.SearchPeople}}"/>
                <Button Text="Configuration" HorizontalOptions="FillAndExpand" VerticalOptions="Center"
                        Command="{Binding GoTo}" CommandParameter="{Binding Source={x:Static local:NavigationConstants.Configuration}}"/>
                <Button Text="About us" HorizontalOptions="FillAndExpand" VerticalOptions="Center"
                        Command="{Binding GoTo}" CommandParameter="{Binding Source={x:Static local:NavigationConstants.AboutUs}}"/>

            </StackLayout>
        </ContentPage>
    </MasterDetailPage.Master>
</MasterDetailPage>
